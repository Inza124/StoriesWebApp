<style type = "text/css">
body {
  font-size: 30px; }
</style>

<h1> Dodaj Opowiastke </h1>
<%= form_for :story, url: stories_path do |x| %>
<p>
  <%= x.label :Autor %><br>
  <%= x.text_field :auth %>
</p>

<p>
  <%= x.label :Tytuł %><br>
  <%= x.text_field :title %>
</p>

<p>
  <%= x.label :Treść %><br>
  <%= x.text_area :body %><br>
</p>

<p>
  <%= x.submit "Zapisz"  %>
</p>
<% end %>
