<style type = "text/css">
.field {
  font-size: 20px;
  margin-left: 80px; }

  .actions {
    font-size: 20px;
    margin-left: 80px; }

  h2 {
    font-size: 40px;
    margin-left: 80px; }
</style>

<h2>Rejestracja</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :Login %><br />
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :Email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :Hasło %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> znaków minimalnie)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :Potwierdź %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
 <br>
  <div class="actions">
    <%= f.submit "Zarejestruj się" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
